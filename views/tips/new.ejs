<h1>GOT A TIP?</h1>
<div>
    <form method="POST" action="/tips">
        <p>Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum </p>
        <label for="user">User</label>
        <select name="userId" id="user" required>
            <% users.forEach(function(user) { %>
              <option value="<%= user.id %>"><%= user.getFullName() %></option>
            <% }) %>
        </select>
        <label for="province">Province</label>
        <select name="provinceId" required>
            <% provinces.forEach(function(province) { %>
              <option value="<%= province.id %>"><%= province.name %></option>
            <% }) %>
        </select>
        <br>
        <label for="tip-address">Address</label>
        <input type="text" name="address" id="tip-address">
        <br>
        <label for="description">Description</label>
        <textarea type="text" name="description" id="new-password" value="What does it look like? Let us know!"></textarea>
        
        <input type="submit" value="Send">
    </form>
</div>

